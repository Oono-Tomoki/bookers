<div>
  <%= flash[:notice] %>
</div>
<h1>Books</h1>
 <table>

  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
   <% @books.each do |f| %>
   <tr>
    <td><%= f.title %></td>

    <td><%= f.body %></td>

    <td><%= link_to "show",book_path(f.id) %></td>

    <td><%= link_to "edit",edit_book_path(f.id) %> </td>

    <td><%= link_to "Destroy",book_path(f.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
   </tr>
   <% end %>
  </tbody>
 </table>


  <% if @book.errors.any? %>
 <a>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 </a>
<% end %>

<h1>New book</h1>

<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book' %></p>
<% end %>
