<h1>Editing Book</h1>

 <% if @list.errors.any? %>
 <a>
  <%= @list.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 </a>
<% end %>



<%= form_with model: @list, url: update_book_path(@list.id), method: :patch do |f| %>


  <h4>title</h4>
   <%= f.text_field :title %>

  <h4>body</h4>
   <%= f.text_area :body %>
   
  <p><%= f.submit 'Update Book' %></p>
<% end %>

 <p>
  <%= link_to "show",book_path(@list.id) %>
  |
  <%= link_to "back",books_path %>
 </p>
